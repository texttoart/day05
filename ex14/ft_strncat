#include<stdio.h>
#include<string.h>

char	*ft_strncat(char *dest, const char *src, size_t n)
{
	size_t	dest_len;
	size_t	i;

	dest_len = ft_strlen(dest);
	i = 0;
	while (i < n && src[i] != '\0')
	{
		dest[dest_len + i] = src[i];
		i = i + 1;
	}
	dest[dest_len + i] = '\0';
	return (dest);
}
int		main(void)
{
	char	str1[100] = "Hello, ";
	char	str2[] = "world!";

	printf("Initial string:\n%s\n", str1);

	ft_strncat(str1, str2, 3);

	printf("Final string:\n%s\n", str1);

	return (0);
}
